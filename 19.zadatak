#include <stdio.h>

/*Pronadite umnozak glavne dijagonale matrice velicine 5x5. Ispisite rjesenje u obliku produkta.*/

int main()
{
    int A[5][5];
    int i;
    int j;
    int produkt = 1;

    printf("Unesi elemente matrice:\n");
    
    for (i = 0; i < 5; i++)
    {
        for (j = 0; j < 5; j++)
        {
            scanf("%d", &A[i][j]);
        }
    }

    for (i = 0; i < 5; i++)
    {
        produkt = produkt * A[i][i];
    }
    printf("\nProdukt glavne dijagonale je = %d", produkt);

    return 0;
}
